    <script type="text/javascript"
      src="http://maps.googleapis.com/maps/api/js?key=AIzaSyDW0nS945cOqUIs777Cqe1huGrvUN76jQ8&sensor=false">
    </script>
    
	<script type='text/javascript'>
	
		// map
		function initializeMap() {
			var myOptions = {
				center: new google.maps.LatLng(90, 71.13),
				zoom: 4,
				mapTypeId: google.maps.MapTypeId.ROADMAP
				
			};
			var map = new google.maps.Map(document.getElementById('map_container'), myOptions);
			
		}
		
		
		
		// on ready
		$(document).ready(function() {
			
			// Calendar
  	  		$(".calendars").datepicker();
  	  		
  	  		// Search bar
  	  		
  	  		$('input[name="destination"]').each(function() {
  	  			this.value = $(this).attr('name');
  	  			$(this).addClass('big_fields');
  	  			
  	  			$(this).focus(function() {
  	  				if (this.value == $(this).attr('name')) {
  	  					this.value = '';
  	  					$(this).removeClass('big_fields');
  	  				}
  	  			})
  	  			
  	  			$(this).blur(function() {
  	  				if (this.value == '') {
  	  					this.value = $(this).attr('name');
  	  					$(this).addClass('big_fields');
  	  				}
  	  			})
  	  		})
  	  		
	  	});
	</script>

</head>

<body onload="initializeMap();">
	


